{
  "moduleId": "onboarding",
  "name": "User Onboarding",
  "description": "Welcome new users and collect basic information",
  "nodes": [
    {
      "id": "welcome_message",
      "type": "message",
      "text": "Welcome to our app! I'm here to help you get started.",
      "variants": "welcome.txt",
      "target": "name_prompt"
    },
    {
      "id": "name_prompt",
      "type": "message",
      "text": "Let's begin by getting to know you better. What's your name?",
      "variants": "name_prompts.txt",
      "target": "name_input"
    },
    {
      "id": "name_input",
      "type": "input",
      "store": "user.name",
      "placeholder": "Enter your full name...",
      "target": "greeting_message"
    },
    {
      "id": "greeting_message",
      "type": "message",
      "text": "Nice to meet you, {user.name|there}! What brings you to our app today?",
      "variants": "greetings.txt",
      "target": "purpose_choice"
    },
    {
      "id": "purpose_choice",
      "type": "choice",
      "store": "user.primary_interest",
      "options": [
        {
          "text": "Exploring features",
          "target": "exploring_response"
        },
        {
          "text": "Getting help",
          "target": "support"
        },
        {
          "text": "Just browsing",
          "target": "browsing_response"
        }
      ]
    },
    {
      "id": "exploring_response",
      "type": "message",
      "text": "Excellent! I'll show you around the key features.",
      "variants": "exploring_responses.txt",
      "target": "features_explanation"
    },
    {
      "id": "features_explanation",
      "type": "message",
      "text": "Our app offers chat functionality, user management, and personalized experiences.",
      "variants": "feature_explanations.txt",
      "target": "preferences_prompt"
    },
    {
      "id": "preferences_prompt",
      "type": "message",
      "text": "Would you like to set up your preferences now?",
      "variants": "preference_prompts.txt",
      "target": "preferences_choice"
    },
    {
      "id": "preferences_choice",
      "type": "choice",
      "options": [
        {
          "text": "Yes, let's do it",
          "target": "theme_prompt"
        },
        {
          "text": "Show me a tutorial first",
          "target": "tutorial"
        },
        {
          "text": "Maybe later",
          "target": "maybe_later_message"
        }
      ]
    },
    {
      "id": "theme_prompt",
      "type": "message",
      "text": "Great! What's your preferred theme?",
      "variants": "theme_prompts.txt",
      "target": "theme_choice"
    },
    {
      "id": "theme_choice",
      "type": "choice",
      "store": "user.theme_preference",
      "options": [
        {
          "text": "Light theme",
          "value": "light",
          "target": "preferences_saved"
        },
        {
          "text": "Dark theme",
          "value": "dark",
          "target": "preferences_saved"
        }
      ]
    },
    {
      "id": "preferences_saved",
      "type": "message",
      "text": "Perfect! Your preferences have been saved. Welcome aboard, {user.name}!",
      "variants": "confirmations.txt",
      "target": "final_choice"
    },
    {
      "id": "browsing_response",
      "type": "message",
      "text": "That's perfectly fine! Feel free to explore at your own pace.",
      "variants": "browsing_responses.txt",
      "target": "browsing_help"
    },
    {
      "id": "browsing_help",
      "type": "message",
      "text": "If you need any help, just ask. I'm always here to assist you, {user.name|friend}!",
      "variants": "help_offers.txt",
      "target": "final_choice"
    },
    {
      "id": "maybe_later_message",
      "type": "message",
      "text": "You're all set! What would you like to do next?",
      "variants": "transitions.txt",
      "target": "final_choice"
    },
    {
      "id": "final_choice",
      "type": "choice",
      "options": [
        {
          "text": "Learn app features",
          "target": "tutorial"
        },
        {
          "text": "Get support",
          "target": "support"
        },
        {
          "text": "Main menu",
          "target": "menu"
        }
      ]
    }
  ]
}