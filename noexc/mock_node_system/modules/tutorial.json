{
  "moduleId": "tutorial",
  "name": "App Tutorial",
  "description": "Interactive tutorial showing app features and functionality",
  "nodes": [
    {
      "id": "tutorial_welcome",
      "type": "message",
      "text": "Welcome to the interactive tutorial! I'll guide you through our app's features.",
      "variants": "welcome_variants.txt",
      "target": "topic_prompt"
    },
    {
      "id": "topic_prompt",
      "type": "message",
      "text": "What would you like to learn about first?",
      "variants": "topic_prompts.txt",
      "target": "topic_choice"
    },
    {
      "id": "topic_choice",
      "type": "choice",
      "store": "tutorial.topic",
      "options": [
        {
          "text": "Chat features",
          "target": "chat_intro",
          "value": "chat"
        },
        {
          "text": "User interface",
          "target": "ui_intro",
          "value": "ui"
        },
        {
          "text": "Settings & preferences",
          "target": "settings_intro",
          "value": "settings"
        }
      ]
    },
    {
      "id": "chat_intro",
      "type": "message",
      "text": "Great choice! Let's explore the chat system.",
      "variants": "chat_intro_variants.txt",
      "target": "chat_explanation"
    },
    {
      "id": "chat_explanation",
      "type": "message",
      "text": "Our chat supports real-time messaging, file sharing, and interactive conversations like this one!",
      "variants": "chat_explanations.txt",
      "target": "try_message_prompt"
    },
    {
      "id": "try_message_prompt",
      "type": "message",
      "text": "Try typing a message to see how it works:",
      "variants": "try_message_prompts.txt",
      "target": "try_message_input"
    },
    {
      "id": "try_message_input",
      "type": "input",
      "store": "tutorial.test_message",
      "placeholder": "Type anything you'd like...",
      "target": "message_received"
    },
    {
      "id": "message_received",
      "type": "message",
      "text": "Perfect! I received: \"{tutorial.test_message|your message}\". That's how easy it is!",
      "variants": "message_confirmations.txt",
      "target": "continue_prompt"
    },
    {
      "id": "ui_intro",
      "type": "message",
      "text": "Let me show you around the user interface!",
      "variants": "ui_intro_variants.txt",
      "target": "ui_explanation"
    },
    {
      "id": "ui_explanation",
      "type": "message",
      "text": "At the top, you'll see the app bar with the title and action buttons.",
      "variants": "ui_explanations.txt",
      "target": "continue_prompt"
    },
    {
      "id": "settings_intro",
      "type": "message",
      "text": "Settings and preferences help you customize your experience.",
      "variants": "settings_intro_variants.txt",
      "target": "settings_explanation"
    },
    {
      "id": "settings_explanation",
      "type": "message",
      "text": "You can change themes, manage your information, and control how the app behaves.",
      "variants": "settings_explanations.txt",
      "target": "continue_prompt"
    },
    {
      "id": "continue_prompt",
      "type": "message",
      "text": "Would you like to explore another feature?",
      "variants": "continue_prompts.txt",
      "target": "continue_choice"
    },
    {
      "id": "continue_choice",
      "type": "choice",
      "options": [
        {
          "text": "Yes, show me more",
          "target": "topic_choice"
        },
        {
          "text": "I'm good for now",
          "target": "tutorial_complete"
        }
      ]
    },
    {
      "id": "tutorial_complete",
      "type": "message",
      "text": "Great job completing the tutorial! You're now ready to use the app effectively.",
      "variants": "completion_variants.txt"
    }
  ]
}