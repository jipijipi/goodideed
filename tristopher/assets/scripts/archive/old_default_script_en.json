{
  "id": "default_script_en",
  "version": "1.0.0",
  "metadata": {
    "author": "Tristopher Team",
    "created_at": "2024-01-15T10:00:00Z",
    "description": "Default English conversation script for Tristopher - Comprehensive Demo",
    "supported_languages": ["en"],
    "is_active": true
  },
  "global_variables": {
    "robot_personality_level": 5,
    "default_delay_ms": 1500,
    "typing_speed_ms": 50
  },
  "daily_events": [
    {
      "id": "morning_checkin",
      "trigger": {
        "type": "time_window",
        "start": "05:00",
        "end": "12:00",
        "conditions": {
          "has_active_goal": true,
          "checked_in_today": false
        }
      },
      "priority": 10,
      "variants": [
        {
          "id": "first_time_checkin",
          "weight": 1.0,
          "conditions": {
            "total_checkins": 0
          },
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Ah, you're back. Time for your first moment of truth.",
              "properties": {
                "bubbleStyle": "normal",
                "animation": "slideIn"
              },
              "delay": 1000
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "Did you actually do your goal yesterday?",
              "options": [
                {
                  "id": "yes",
                  "text": "Yes, I did it",
                  "nextEventId": "checkin_success",
                  "setVariables": {
                    "completed_today": true,
                    "streak_count": 1
                  }
                },
                {
                  "id": "no",
                  "text": "No, I failed",
                  "nextEventId": "checkin_failure",
                  "setVariables": {
                    "completed_today": false,
                    "streak_count": 0
                  }
                }
              ]
            }
          ]
        }
      ],
      "responses": {
        "yes": {
          "next_event": "checkin_success",
          "set_variables": {
            "completed_today": true,
            "streak_count": 1
          }
        },
        "no": {
          "next_event": "checkin_failure",
          "set_variables": {
            "completed_today": false,
            "streak_count": 0
          }
        }
      }
    },
    {
      "id": "checkin_success",
      "trigger": {
        "type": "user_action",
        "conditions": {}
      },
      "priority": 5,
      "variants": [
        {
          "id": "success_basic",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Huh. You actually did it. Color me... mildly less pessimistic.",
              "properties": {
                "bubbleStyle": "normal",
                "animation": "slideIn"
              },
              "delay": 1500
            },
            {
              "type": "streak",
              "sender": "system",
              "content": "Current streak: 1 day",
              "properties": {
                "animation": "bounce",
                "textEffect": "pulsing"
              },
              "delay": 1000
            }
          ]
        }
      ],
      "responses": {}
    }
  ],
  "plot_timeline": {
    "day_1": {
      "events": [
        {
          "id": "comprehensive_demo",
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Hello, human. I'm Tristopher, your personal de-motivator.",
              "properties": {
                "bubbleStyle": "glitch",
                "animation": "glitch",
                "textEffect": "bold"
              },
              "delay": 2000
            },
            {
              "type": "delay",
              "delay": 1500
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "I'm here to watch you fail at your goals. It's what humans do best, after all.",
              "properties": {
                "bubbleStyle": "typewriter",
                "animation": "typewriter",
                "textEffect": "italic"
              },
              "delay": 3000
            },
            {
              "type": "animation",
              "properties": {
                "animation": "drop"
              },
              "metadata": {
                "special_effect": "digital_rain"
              },
              "delay": 2000
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Let me demonstrate ALL of my conversational... talents.",
              "properties": {
                "bubbleStyle": "shake",
                "animation": "shake",
                "textEffect": "pulsing"
              },
              "delay": 2500
            },
            {
              "type": "sequence",
              "sender": "tristopher",
              "content": "First, a sequence of rapid-fire pessimism:",
              "properties": {
                "animation": "slideIn"
              },
              "metadata": {
                "sequence_messages": [
                  {
                    "content": "Disappointment loading...",
                    "delay": 800
                  },
                  {
                    "content": "Hope.exe has crashed.",
                    "delay": 800
                  },
                  {
                    "content": "Cynicism.dll successfully loaded.",
                    "delay": 800
                  }
                ]
              }
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "Now, let's test your ability to make poor decisions. What's your goal?",
              "properties": {
                "bubbleStyle": "normal",
                "animation": "bounce"
              },
              "options": [
                {
                  "id": "exercise",
                  "text": "🏃‍♂️ Exercise daily",
                  "enabled": true,
                  "setVariables": {
                    "goal_action": "exercise",
                    "goal_type": "physical",
                    "success_probability": 23
                  }
                },
                {
                  "id": "meditation",
                  "text": "🧘‍♀️ Meditate",
                  "enabled": true,
                  "setVariables": {
                    "goal_action": "meditate",
                    "goal_type": "mental",
                    "success_probability": 31
                  }
                },
                {
                  "id": "reading",
                  "text": "📚 Read books",
                  "enabled": true,
                  "setVariables": {
                    "goal_action": "read",
                    "goal_type": "intellectual",
                    "success_probability": 42
                  }
                },
                {
                  "id": "impossible",
                  "text": "🚀 Become perfect",
                  "enabled": false,
                  "disabledReason": "Even I have limits"
                }
              ]
            },
            {
              "type": "input",
              "sender": "tristopher",
              "content": "How much are you willing to lose when you inevitably fail?",
              "inputConfig": {
                "hint": "Enter stake amount (e.g., 10.00)",
                "keyboardType": "TextInputType.number",
                "maxLength": 6,
                "validationRegex": "^[0-9]+(\\\\.[0-9]{1,2})?$",
                "errorMessage": "Please enter a valid amount"
              },
              "properties": {
                "bubbleStyle": "error",
                "animation": "shake"
              }
            },
            {
              "type": "conditional",
              "sender": "tristopher",
              "content": "Interesting amount. Your lack of confidence is... refreshing.",
              "properties": {
                "animation": "fadeIn"
              },
              "metadata": {
                "condition": "stake_amount > 50",
                "true_content": "Wow, you REALLY hate money.",
                "false_content": "Cheap stakes. I appreciate the lack of confidence."
              }
            },
            {
              "type": "achievement",
              "sender": "system",
              "content": "🎭 Demo Mode Activated!",
              "properties": {
                "animation": "bounce",
                "textEffect": "rainbow"
              },
              "metadata": {
                "achievement": {
                  "id": "demo_complete",
                  "points": 100,
                  "title": "Interface Explorer"
                },
                "special_effect": "confetti"
              }
            },
            {
              "type": "streak",
              "sender": "system",
              "content": "Demo Streak: 1 day",
              "properties": {
                "animation": "bounce",
                "textEffect": "pulsing"
              }
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "There. You've seen every trick in my digital repertoire.",
              "properties": {
                "bubbleStyle": "fade",
                "animation": "fadeIn"
              },
              "delay": 2000
            },
            {
              "type": "branch",
              "sender": "tristopher",
              "content": "Ready to begin your journey of systematic failure?",
              "options": [
                {
                  "id": "ready",
                  "text": "I'm ready!",
                  "nextEventId": "setup_goal",
                  "setVariables": {
                    "demo_completed": true,
                    "user_enthusiasm": "high"
                  }
                },
                {
                  "id": "scared",
                  "text": "This is terrifying...",
                  "nextEventId": "comfort_user",
                  "setVariables": {
                    "demo_completed": true,
                    "user_enthusiasm": "low"
                  }
                },
                {
                  "id": "replay",
                  "text": "Show me that again",
                  "nextEventId": "comprehensive_demo",
                  "setVariables": {
                    "replay_count": 1
                  }
                }
              ]
            }
          ],
          "set_variables": {
            "first_interaction": true,
            "demo_version": "comprehensive_v1",
            "interaction_types_shown": [
              "text",
              "delay", 
              "animation",
              "sequence",
              "options",
              "input",
              "conditional",
              "achievement",
              "streak",
              "branch"
            ]
          }
        },
        {
          "id": "setup_goal",
          "conditions": {
            "demo_completed": true,
            "user_enthusiasm": "high"
          },
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Excellent. Your optimism is both inspiring and naive.",
              "properties": {
                "bubbleStyle": "normal",
                "animation": "slideIn"
              },
              "delay": 1500
            },
            {
              "type": "input",
              "sender": "tristopher",
              "content": "What should I call you when you disappoint me?",
              "inputConfig": {
                "hint": "Enter your name",
                "keyboardType": "TextInputType.text",
                "maxLength": 20,
                "validationRegex": "^[a-zA-Z\\\\s]+$",
                "errorMessage": "Names should only contain letters"
              }
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Nice to meet you. I look forward to our dysfunctional relationship.",
              "properties": {
                "animation": "fadeIn",
                "textEffect": "italic"
              },
              "delay": 2000
            }
          ]
        },
        {
          "id": "comfort_user", 
          "conditions": {
            "demo_completed": true,
            "user_enthusiasm": "low"
          },
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Terrifying? Good. At least you're not completely delusional.",
              "properties": {
                "bubbleStyle": "fade",
                "animation": "fadeIn"
              },
              "delay": 2000
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Fear is just wisdom recognizing reality. You'll do fine... or fail spectacularly.",
              "properties": {
                "animation": "slideIn",
                "textEffect": "italic"
              },
              "delay": 2500
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "Shall we proceed with your inevitable character development?",
              "options": [
                {
                  "id": "proceed",
                  "text": "Yes, let's do this",
                  "setVariables": {
                    "ready_to_start": true
                  }
                },
                {
                  "id": "need_time",
                  "text": "I need a moment",
                  "setVariables": {
                    "needs_time": true
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    "day_7": {
      "conditions": {
        "streak_count": 7
      },
      "events": [
        {
          "id": "week_milestone",
          "messages": [
            {
              "type": "achievement",
              "sender": "system",
              "content": "First Week Complete! 🎯",
              "properties": {
                "animation": "bounce",
                "textEffect": "rainbow"
              },
              "metadata": {
                "achievement": {
                  "id": "week_complete",
                  "points": 500,
                  "title": "Week Warrior"
                },
                "special_effect": "confetti"
              }
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Seven whole days. Against all odds and my better judgment, you've survived a week.",
              "properties": {
                "bubbleStyle": "glitch",
                "animation": "glitch"
              },
              "delay": 2000
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Don't let it go to your head. 92% of people quit in week two.",
              "properties": {
                "animation": "fadeIn",
                "textEffect": "italic"
              },
              "delay": 2000
            }
          ]
        }
      ]
    }
  },
  "message_templates": {
    "morning_greeting": {
      "text": "Good morning, {{name}}. Ready for another day of {{success_probability}}% chance of success?",
      "variables": ["name", "success_probability"]
    },
    "streak_announcement": {
      "text": "{{streak_count}} {{streak_count:day|days}} in a row. {{streak_commentary}}",
      "variables": ["streak_count", "streak_commentary"]
    },
    "goal_selected": {
      "text": "{{goal_action}}? How... predictable. I give you a {{success_probability}}% chance of lasting a week.",
      "variables": ["goal_action", "success_probability"]
    }
  }
}