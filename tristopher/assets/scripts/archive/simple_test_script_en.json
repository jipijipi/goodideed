{
  "id": "simple_test_script_en",
  "version": "1.0.0",
  "metadata": {
    "author": "Tristopher Team",
    "created_at": "2024-01-15T10:00:00Z",
    "description": "Simple test script with manual triggers for testing conversation flow",
    "supported_languages": ["en"],
    "is_active": true
  },
  "global_variables": {
    "robot_personality_level": 5,
    "default_delay_ms": 1000
  },
  "daily_events": [
    {
      "id": "simple_intro",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 20,
      "variants": [
        {
          "id": "intro_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Well, well, well. Another human who thinks they can change.",
              "delay": 1000
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "I'm Tristopher. Your brutally honest accountability partner.",
              "delay": 2000
            },
            {
              "type": "input",
              "sender": "tristopher",
              "content": "What should I call you while you inevitably fail?",
              "inputConfig": {
                "hint": "Your name",
                "keyboardType": "TextInputType.text",
                "maxLength": 20
              }
            }
          ]
        }
      ],
      "responses": {
        "*": {
          "next_event": "habit_choice",
          "set_variables": {
            "intro_completed": true
          }
        }
      }
    },
    {
      "id": "habit_choice",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 19,
      "variants": [
        {
          "id": "habit_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "{{name}}, let's talk about what you're supposedly going to accomplish.",
              "delay": 1500
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "What's your main goal? Pick something you'll probably give up on:",
              "options": [
                {
                  "id": "exercise",
                  "text": "Exercise daily"
                },
                {
                  "id": "study",
                  "text": "Study/learn something"
                },
                {
                  "id": "write",
                  "text": "Write daily"
                },
                {
                  "id": "meditate",
                  "text": "Meditate"
                }
              ]
            }
          ]
        }
      ],
      "responses": {
        "exercise": {
          "next_event": "stakes_talk",
          "set_variables": {
            "main_habit": "exercise"
          }
        },
        "study": {
          "next_event": "stakes_talk",
          "set_variables": {
            "main_habit": "study"
          }
        },
        "write": {
          "next_event": "stakes_talk",
          "set_variables": {
            "main_habit": "write"
          }
        },
        "meditate": {
          "next_event": "stakes_talk",
          "set_variables": {
            "main_habit": "meditate"
          }
        }
      }
    },
    {
      "id": "stakes_talk",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 18,
      "variants": [
        {
          "id": "stakes_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "{{main_habit}}? How original. Let me guess - you've tried this before?",
              "delay": 1500
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Here's how this works: You fail, your money goes to something you hate.",
              "delay": 2500
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "Ready to put your money where your mouth is?",
              "options": [
                {
                  "id": "ready",
                  "text": "I'm ready!"
                },
                {
                  "id": "nervous",
                  "text": "This is scary..."
                },
                {
                  "id": "skeptical",
                  "text": "This seems harsh"
                }
              ]
            }
          ]
        }
      ],
      "responses": {
        "ready": {
          "next_event": "final_ready",
          "set_variables": {
            "commitment_level": "high"
          }
        },
        "nervous": {
          "next_event": "final_nervous",
          "set_variables": {
            "commitment_level": "nervous"
          }
        },
        "skeptical": {
          "next_event": "final_skeptical",
          "set_variables": {
            "commitment_level": "low"
          }
        }
      }
    },
    {
      "id": "final_ready",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 17,
      "variants": [
        {
          "id": "ready_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "I'm ready!? Bold. I like that kind of naive confidence.",
              "delay": 1500
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Alright, {{name}}. Let's see if your actions match your words.",
              "delay": 2000
            }
          ]
        }
      ],
      "responses": {}
    },
    {
      "id": "final_nervous",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 17,
      "variants": [
        {
          "id": "nervous_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Scary? Good. Fear might actually motivate you.",
              "delay": 1500
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "At least you're honest about your anxiety, {{name}}.",
              "delay": 2000
            }
          ]
        }
      ],
      "responses": {}
    },
    {
      "id": "final_skeptical",
      "trigger": {
        "type": "manual",
        "conditions": {}
      },
      "priority": 17,
      "variants": [
        {
          "id": "skeptical_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Harsh? Oh, {{name}}, you haven't seen anything yet.",
              "delay": 1500
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "This attitude tells me everything I need to know about your chances.",
              "delay": 2000
            }
          ]
        }
      ],
      "responses": {}
    }
  ],
  "plot_timeline": {},
  "message_templates": {
    "daily_greeting": {
      "text": "Good morning, {{name}}. Day {{day_number}} of your inevitable disappointment.",
      "variables": ["name", "day_number"]
    },
    "habit_reminder": {
      "text": "Don't forget about your {{main_habit}}, {{name}}. Your wallet is watching.",
      "variables": ["main_habit", "name"]
    }
  }
}
