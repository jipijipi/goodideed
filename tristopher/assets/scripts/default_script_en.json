{
  "id": "minimal_test_script_en",
  "version": "1.0.0",
  "metadata": {
    "author": "Tristopher Team",
    "created_at": "2024-01-15T10:00:00Z",
    "description": "Minimal test script for troubleshooting conversation engine",
    "supported_languages": ["en"],
    "is_active": true
  },
  "global_variables": {
    "robot_personality_level": 5,
    "default_delay_ms": 1000
  },
  "daily_events": [
    {
      "id": "simple_checkin",
      "trigger": {
        "type": "time_window",
        "start": "00:00",
        "end": "23:59",
        "conditions": {}
      },
      "priority": 10,
      "variants": [
        {
          "id": "basic_variant",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Hello. This is a basic test message.",
              "delay": 1000
            },
            {
              "type": "options",
              "sender": "tristopher",
              "content": "How are you feeling?",
              "options": [
                {
                  "id": "good",
                  "text": "I'm good",
                  "setVariables": {
                    "mood": "good"
                  }
                },
                {
                  "id": "bad",
                  "text": "Not great",
                  "setVariables": {
                    "mood": "bad"
                  }
                }
              ]
            }
          ]
        }
      ],
      "responses": {
        "good": {
          "next_event": "positive_response",
          "set_variables": {
            "mood": "good",
            "last_response": "positive"
          }
        },
        "bad": {
          "next_event": "negative_response",
          "set_variables": {
            "mood": "bad",
            "last_response": "negative"
          }
        }
      }
    },
    {
      "id": "positive_response",
      "trigger": {
        "type": "user_action",
        "conditions": {}
      },
      "priority": 5,
      "variants": [
        {
          "id": "good_response",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Good to hear. That's... unexpected.",
              "delay": 1500
            }
          ]
        }
      ],
      "responses": {}
    },
    {
      "id": "negative_response",
      "trigger": {
        "type": "user_action",
        "conditions": {}
      },
      "priority": 5,
      "variants": [
        {
          "id": "bad_response",
          "weight": 1.0,
          "conditions": {},
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Not surprising. That's more like it.",
              "delay": 1500
            }
          ]
        }
      ],
      "responses": {}
    }
  ],
  "plot_timeline": {
    "day_1": {
      "events": [
        {
          "id": "simple_intro",
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Welcome to the minimal test.",
              "delay": 1000
            },
            {
              "type": "text",
              "sender": "tristopher",
              "content": "This is day 1 of your journey.",
              "delay": 2000
            },
            {
              "type": "input",
              "sender": "tristopher",
              "content": "What's your name?",
              "inputConfig": {
                "hint": "Enter your name",
                "keyboardType": "TextInputType.text",
                "maxLength": 20
              }
            }
          ],
          "set_variables": {
            "intro_completed": true
          }
        }
      ]
    },
    "day_2": {
      "conditions": {
        "intro_completed": true
      },
      "events": [
        {
          "id": "day_two_message",
          "messages": [
            {
              "type": "text",
              "sender": "tristopher",
              "content": "Day 2. Still here, I see.",
              "delay": 1000
            }
          ]
        }
      ]
    }
  },
  "message_templates": {
    "simple_greeting": {
      "text": "Hello {{name}}, welcome to day {{day_number}}.",
      "variables": ["name", "day_number"]
    },
    "mood_check": {
      "text": "You said you're feeling {{mood}}. Interesting.",
      "variables": ["mood"]
    }
  }
}